mysqladmin -u root password "adminuser"

mysql -u root -p

CREATE USER 'valmor'@'%' IDENTIFIED BY 'adminuser';

GRANT ALL PRIVILEGES ON  *.* to 'valmor'@'%' WITH GRANT OPTION;

flush privileges;

SHOW GRANTS FOR valmor;

CREATE DATABASE moodle CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;

CREATE USER 'moodleuser'@'localhost' IDENTIFIED BY 'adminuser';

GRANT ALL PRIVILEGES ON moodle.* TO 'moodleuser'@'localhost';

exit;

/etc/init.d/mysql restart

